<% content_for :title, t("form_templates.title") %>

<div class="form-templates-page">
  <div class="page-header">
    <div class="page-header-content">
      <h1><%= t("form_templates.title") %></h1>
      <div class="page-header-actions">
        <%= link_to t("form_templates.new_template"), new_form_template_path, class: "btn btn-primary" %>
        <%= link_to t("form_templates.create_from_form"), "#", class: "btn btn-secondary", data: { toggle: "modal", target: "#createFromFormModal" } %>
      </div>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="filters-section">
    <%= form_with url: form_templates_path, method: :get, local: true, class: "filters-form" do |form| %>
      <div class="filters-row">
        <div class="filter-group">
          <%= form.label :search, t("form_templates.search") %>
          <%= form.text_field :search, params[:search], placeholder: t("form_templates.search_placeholder"), class: "form-control" %>
        </div>

        <div class="filter-group">
          <%= form.label :category, t("form_templates.category") %>
          <%= form.select :category, 
                         options_for_select([["All Categories", ""]] + @categories.map { |c| [c.humanize, c] }, params[:category]),
                         {}, class: "form-control" %>
        </div>

        <div class="filter-group">
          <%= form.label :sort, t("form_templates.sort") %>
          <%= form.select :sort, 
                         options_for_select([
                           [t("form_templates.sort.recent"), ""],
                           [t("form_templates.sort.popular"), "popular"]
                         ], params[:sort]),
                         {}, class: "form-control" %>
        </div>

        <div class="filter-group">
          <div class="checkbox">
            <%= form.check_box :public_only, { checked: params[:public_only] == 'true' }, 'true', 'false' %>
            <%= form.label :public_only, t("form_templates.public_only"), class: "form-check-label" %>
          </div>
        </div>

        <div class="filter-group">
          <%= form.submit t("form_templates.filter"), class: "btn btn-primary" %>
          <%= link_to t("form_templates.clear"), form_templates_path, class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Templates Grid -->
  <div class="templates-content">
    <% if @templates.any? %>
      <div class="templates-grid">
        <% @templates.each do |template| %>
          <div class="template-card">
            <div class="template-header">
              <h3 class="template-name">
                <%= link_to template.name, form_template_path(template) %>
              </h3>
              <div class="template-actions">
                <%= link_to t("form_templates.use"), use_form_template_path(template), class: "btn btn-sm btn-primary" %>
                <% if can?(:update, template) %>
                  <%= link_to t("form_templates.edit"), edit_form_template_path(template), class: "btn btn-sm btn-outline-secondary" %>
                <% end %>
              </div>
            </div>
            
            <div class="template-body">
              <% if template.description.present? %>
                <p class="template-description"><%= truncate(template.description, length: 120) %></p>
              <% end %>
              
              <div class="template-meta">
                <div class="template-category">
                  <i class="fa fa-tag"></i>
                  <%= template.category&.humanize || t("form_templates.no_category") %>
                </div>
                
                <div class="template-questions">
                  <i class="fa fa-question-circle"></i>
                  <%= pluralize(template.template_data.dig('questions')&.length || 0, 'question') %>
                </div>
                
                <div class="template-usage">
                  <i class="fa fa-download"></i>
                  <%= pluralize(template.usage_count, 'use') %>
                </div>
              </div>
              
              <% if template.tags.any? %>
                <div class="template-tags">
                  <% template.tags.each do |tag| %>
                    <span class="tag"><%= tag %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <div class="template-footer">
              <div class="template-creator">
                <i class="fa fa-user"></i>
                <%= template.creator.name %>
              </div>
              
              <div class="template-date">
                <i class="fa fa-calendar"></i>
                <%= time_ago_in_words(template.created_at) %> ago
              </div>
              
              <% if template.is_public? %>
                <div class="template-public">
                  <i class="fa fa-globe"></i>
                  Public
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="pagination-container">
        <%= will_paginate @templates %>
      </div>
    <% else %>
      <div class="no-templates">
        <div class="no-templates-content">
          <i class="fa fa-file-text"></i>
          <h3><%= t("form_templates.no_templates") %></h3>
          <p><%= t("form_templates.no_templates_description") %></p>
          <%= link_to t("form_templates.create_first"), new_form_template_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Create from Form Modal -->
<div class="modal fade" id="createFromFormModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t("form_templates.create_from_form") %></h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <%= form_with url: create_from_form_form_templates_path, method: :post, local: true do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :form_id, t("form_templates.select_form") %>
            <%= form.select :form_id, 
                           options_from_collection_for_select(@forms, :id, :name),
                           { prompt: t("form_templates.select_form_prompt") },
                           { class: "form-control", required: true } %>
          </div>
          
          <div class="form-group">
            <%= form.label :name, t("form_templates.template_name") %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= form.label :description, t("form_templates.description") %>
            <%= form.text_area :description, class: "form-control", rows: 3 %>
          </div>
          
          <div class="form-group">
            <%= form.label :category, t("form_templates.category") %>
            <%= form.select :category, 
                           options_for_select(@categories.map { |c| [c.humanize, c] }),
                           { prompt: t("form_templates.select_category") },
                           { class: "form-control" } %>
          </div>
          
          <div class="form-group">
            <%= form.label :tags, t("form_templates.tags") %>
            <%= form.text_field :tags, class: "form-control", placeholder: t("form_templates.tags_placeholder") %>
            <small class="form-text text-muted"><%= t("form_templates.tags_help") %></small>
          </div>
          
          <div class="form-group">
            <div class="checkbox">
              <%= form.check_box :is_public, class: "form-check-input" %>
              <%= form.label :is_public, t("form_templates.make_public"), class: "form-check-label" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t("form_templates.cancel") %></button>
          <%= form.submit t("form_templates.create_template"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

